<Window x:Class="Swordfish.NET.TestV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swordfish.NET.Demo.Tests"
        mc:Ignorable="d"
        Title="CollectionV3 Performance and Validation Tests" Height="480" Width="640">
  <DockPanel LastChildFill="True">
    <Border BorderThickness="1" BorderBrush="Red" DockPanel.Dock="Top" CornerRadius="2" Padding="2" Margin="2">
